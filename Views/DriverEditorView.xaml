<Window x:Class="WaybillWpf.Views.Admin.DriverEditorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:WaybillWpf.ViewModels.Admin"
        d:DataContext="{d:DesignInstance Type=viewmodels:DriverEditorViewModel}"
        mc:Ignorable="d"
        Title="Редактор водителя" Height="350" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/> <!-- Растяжка -->
            <RowDefinition Height="Auto"/> <!-- Кнопки -->
        </Grid.RowDefinitions>

        <!-- Основная инфа -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="ФИО Водителя:" FontWeight="SemiBold"/>
            <TextBox Text="{Binding DriverName, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15" Height="25"/>
        </StackPanel>

        <!-- Водительское удостоверение (GroupBox) -->
        <GroupBox Grid.Row="1" Header="Водительское удостоверение" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Номер -->
                <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Номер ВУ:" Margin="0,0,0,2"/>
                <TextBox Grid.Row="1" Grid.ColumnSpan="2" 
                         Text="{Binding LicenseNumber, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,0,0,10" Height="25"/>

                <!-- Дата выдачи -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Дата выдачи:" Margin="0,0,5,2"/>
                <DatePicker Grid.Row="3" Grid.Column="0" 
                            SelectedDate="{Binding LicenseIssueDate}" Margin="0,0,5,0"/>

                <!-- Дата окончания -->
                <TextBlock Grid.Row="2" Grid.Column="1" Text="Действует до:" Margin="5,0,0,2"/>
                <DatePicker Grid.Row="3" Grid.Column="1" 
                            SelectedDate="{Binding LicenseExpirationDate}" Margin="5,0,0,0"/>
            </Grid>
        </GroupBox>

        <!-- Кнопки -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Сохранить" 
                    Command="{Binding SaveCommand}" 
                    IsDefault="True"
                    Width="100" Height="30" Margin="0,0,10,0"/>
            
            <!-- Кнопка отмены просто закрывает окно, IsCancel=True делает это автоматически -->
            <Button Content="Отмена" 
                    IsCancel="True" 
                    Width="80" Height="30"/>
        </StackPanel>
    </Grid>
</Window>