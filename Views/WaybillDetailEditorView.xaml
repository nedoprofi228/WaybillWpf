<Window x:Class="WaybillWpf.Views.WaybillDetailEditorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:WaybillWpf.ViewModels"
        xmlns:converters="clr-namespace:WaybillWpf.ViewModels.Converters"
        d:DataContext="{d:DesignInstance Type=viewmodels:WaybillDetailEditorViewModel}"
        mc:Ignorable="d"
        Title="Детали поездки" 
        Height="550" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        SizeToContent="Height">
    
    <Window.Resources>
        <converters:DateTimeToStringConverter x:Key="DateConverter"/>
    </Window.Resources>
    
    

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Время -->
            <RowDefinition Height="Auto"/> <!-- Спидометр -->
            <RowDefinition Height="Auto"/> <!-- Бак -->
            <RowDefinition Height="Auto"/> <!-- Расход -->
            <RowDefinition Height="*"/> <!-- Кнопки -->
        </Grid.RowDefinitions>

        <!-- 1. ВРЕМЯ -->
        <GroupBox Grid.Row="0" Header="Время" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Выезд:" VerticalAlignment="Center" Margin="0,0,10,10"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding DepartureDateTime, StringFormat='dd.MM.yyyy HH:mm',Converter={StaticResource DateConverter}, UpdateSourceTrigger=LostFocus}" Height="25" Margin="0,0,0,10"/>

                <TextBlock Grid.Row="1" Text="Возврат:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding ArrivalDateTime, StringFormat='dd.MM.yyyy HH:mm', Converter={StaticResource DateConverter}, UpdateSourceTrigger=LostFocus}" Height="25"/>
            </Grid>
        </GroupBox>

        <!-- 2. СПИДОМЕТР -->
        <GroupBox Grid.Row="1" Header="Спидометр (км)" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Начало" HorizontalAlignment="Center" Foreground="Gray"/>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="Конец" HorizontalAlignment="Center" Foreground="Gray"/>

                <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding StartMealing, UpdateSourceTrigger=PropertyChanged}" Height="25" TextAlignment="Center"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="→" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding EndMealing, UpdateSourceTrigger=PropertyChanged}" Height="25" TextAlignment="Center"/>
            </Grid>
        </GroupBox>

        <!-- 3. ОСТАТОК В БАКЕ -->
        <GroupBox Grid.Row="2" Header="Остаток в баке (л)" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Было" HorizontalAlignment="Center" Foreground="Gray"/>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="Стало" HorizontalAlignment="Center" Foreground="Gray"/>

                <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding StartFuel, UpdateSourceTrigger=PropertyChanged}" Height="25" TextAlignment="Center"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="→" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding EndFuel, UpdateSourceTrigger=PropertyChanged}" Height="25" TextAlignment="Center"/>
            </Grid>
        </GroupBox>

        <!-- 4. РАСХОД ТОПЛИВА -->
        <GroupBox Grid.Row="3" Header="Расход за рейс" Padding="10" Margin="0,0,0,15" BorderBrush="Blue">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Левая часть: Ввод Факта -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="ФАКТ (вручную)" FontSize="11" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding FuelConsumedInput,  StringFormat=F2, UpdateSourceTrigger=PropertyChanged}" 
                             Height="30" FontSize="16" FontWeight="Bold" 
                             VerticalContentAlignment="Center" TextAlignment="Center"
                             BorderBrush="Blue" BorderThickness="1"/>
                </StackPanel>

                <!-- Правая часть: Вывод Нормы -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="НОРМА (авто)" FontSize="11" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <Border Background="#F0F0F0" Height="30" CornerRadius="3">
                        <TextBlock Text="{Binding CalculatedNormConsumption, StringFormat=F2}" 
                                   FontSize="16" FontWeight="Bold" Foreground="Green"
                                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </StackPanel>
                
                <!-- Итог по пробегу -->
                 <TextBlock Grid.Row="1" Grid.ColumnSpan="3" 
                           Text="{Binding CalculatedDistance, StringFormat='Пробег: {0:F1} км'}" 
                           HorizontalAlignment="Center" Margin="0,10,0,0" FontStyle="Italic" Foreground="Gray"/>
            </Grid>
        </GroupBox>

        <!-- 5. КНОПКИ -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button Content="Сохранить" Command="{Binding SaveCommand}" IsDefault="True" Width="100" Height="30" Margin="0,0,10,0"/>
            <Button Content="Отмена" IsCancel="True" Width="80" Height="30"/>
        </StackPanel>
    </Grid>
</Window>